<style>
    main {
        min-height: calc(100vh - 145px); 
        margin-bottom: 50px; 
    }

    footer {
        height: 95px; 
        width: 100%;
        position: fixed;
        bottom: 0;
        left: 0;
        background-color: #f8f9fa;
        text-align: center;
        padding-top: 20px;
    }
