@{
    ViewData["Title"] = "Комплексы";
}

@{
    Layout = "_LayoutAuthorized";
}


<form asp-area="" asp-controller="Home" asp-action="Generate" method="post">
    <div class="text-center">
        <p>Выделите критерии для подбора:</p>
        <div class="row">
            <div class="col-md-4">
                @Html.DropDownList("exerciseDifficulty", ViewBag.ExerciseDifficulties as SelectList, new { @class = "form-control", id = "exercisedifficulty" })
            </div>
            <div class="col-md-4">
                @Html.DropDownList("exerciseType", ViewBag.ExerciseTypes as SelectList, new { @class = "form-control", id = "exercisetype" })
            </div>
            <div class="col-md-4">
                @Html.DropDownList("exerciseAim", ViewBag.ExerciseAims as SelectList, new { @class = "form-control", id="exerciseaim" })
            </div>
        </div>
        <button class="btn btn-primary mt-2">Сгенерировать</button>
    </div>
</form>

